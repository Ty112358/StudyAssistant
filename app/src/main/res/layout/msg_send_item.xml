<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:id="@+id/time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/browser_actions_text_color"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:text="上午9:30"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/user_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/user"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"/>

        <TextView
                android:id="@+id/send_msg_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/user_icon"
                android:text="Hello"
                android:gravity="center"
                android:background="@drawable/send_msg_normal"
                android:padding="5dp"/>

        <ImageView
                android:id="@+id/send_msg_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/send_message_progress"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/send_msg_context"/>
    </RelativeLayout>


</LinearLayout>